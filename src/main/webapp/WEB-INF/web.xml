<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  
  <!-- 필터 -->
  
  
  <!-- 예외처리 목록 -->
  <error-page>
	  <error-code>500</error-code>
	  	<location>/chapter11/errorCode_error.jsp</location>
  </error-page>
  
  <error-page>
  	  <exception-type>java.lang.Exception</exception-type>
	  	<location>/chapter11/exceptionType_error.jsp</location>
  </error-page>
  
  
  
  
  <!-- 어떤 그룹의? : 보안적용 그룹지정하기 -->
  <security-role>
  	<role-name>manager</role-name>
  </security-role>
  
  <!-- 누구를? -->
  <security-constraint>
  <!--검사대상 지정 : 어떤 URL을 검사할 것인지?  -->
  	<web-resource-collection>
  		<web-resource-name>JSPBook</web-resource-name>
  		<url-pattern>/10_3</url-pattern>
  		<http-method>GET</http-method>
  	</web-resource-collection>
  	<!-- 어느 그룹에게 권한을 줄 것인지? -->
  	<auth-constraint>
  		<description></description>
  		<role-name>manager</role-name>
  	</auth-constraint>
  </security-constraint>
  
  
  <!-- 누구인지 검사 방법 지정  -->
  <login-config>
  	<auth-method>FORM</auth-method>
  	  	<form-login-config>
  			<form-login-page>/chapter10/login.jsp</form-login-page>
  			<form-error-page>/chapter10/login_failed.jsp</form-error-page>
  	</form-login-config>
  </login-config>
  

  
  <display-name>jspbook</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>